{
    "swaggerDefinition": {
        "swagger": "2.0",
        "info": {
            "title": "Sleek Collections API",
            "version": "1.0.0",
            "description": "This is a simple CRUD API application made with Express and documented with Swagger",
            "license": {
                "name": "MIT",
                "url": "https://opensource.org/licenses/MIT"
            },
            "contact": {
                "name": "Akwaaba Evolution",
                "url": "https://akwaabaevolution.com",
                "email": "akwaabaevolution@email.com"
            }
        },
        "host": "localhost:3000",
        "basePath": "/",
        "tags": [{
            "name": "Products",
            "description": "API for products in the system"
        }, {
            "name": "Category",
            "description": "API for categories in the system"
        }],

        "paths": {
            "/products": {
                "get": {
                    "tags": ["Products"],
                    "summary": "Get all products in system",
                    "responses": {
                        "200": {
                            "description": "OK"
                        }
                    }
                },
                "post": {
                    "tags": ["Products"],
                    "summary": "Post products in system",
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/product"
                            }
                        }
                    }
                },
                "delete": {
                    "tags": ["Products"],
                    "summary": "Delete all products in system",
                    "responses": {
                        "200": {
                            "description": "OK"
                        }
                    }
                }
            },
            "/products/id": {
                "get": {
                    "tags": ["Products"],
                    "summary": "Get all products in system",
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/product"
                            }
                        }
                    }
                },
                "delete": {
                    "tags": ["Products"],
                    "summary": "Delete a product in system",
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/product"
                            }
                        }
                    }
                }
            },
            "/category": {
                "get": {
                    "tags": ["Category"],
                    "summary": "Get all categories in system",
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/Category"
                            }
                        }
                    }
                },
                "post": {
                    "tags": ["Category"],
                    "summary": "Post Category in system",
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/product"
                            }
                        }
                    }
                },
                "delete": {
                    "tags": ["Category"],
                    "summary": "Delete all Category in system",
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/Category"
                            }
                        }
                    }
                }
            },
            "/category/id": {
                "get": {
                    "tags": ["Category"],
                    "summary": "Get a Category in system",
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/Category"
                            }
                        }
                    }
                },
                "delete": {
                    "tags": ["Category"],
                    "summary": "Delete a Category in system",
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/Category"
                            }
                        }
                    }
                }
            }
        },
        "definitions": {
            "product": {
                "required": ["name", "description", "quantity", "unit_price"],
                "properties": {
                    "name": {
                        "type": "String",
                        "uniqueItems": false
                    },
                    "description": {
                        "type": "String"
                    },
                    "quantity": {
                        "type": "integer"
                    },
                    "category": {
                        "type": "String"
                    },
                    "manufacturer": {
                        "type": "String"
                    },
                    "supplier": {
                        "type": "String"
                    },
                    "unit_price": {
                        "type": "Number",
                        "required": true
                    },
                    "ratings": {
                        "type": "Number",
                        "default": 1
                    },
                    "status": {
                        "type": "Boolean",
                        "default": true
                    },
                    "image": {
                        "type": "Buffer"
                    }
                }
            }
        },
        "schemes": ["http", "https"],
        "consumes": ["application/json"],
        "produces": ["application/json"]
    },
    "apis": ["./src/routers/*.js"],
    "servers": [{
            "url": "http://localhost:3000/"
        },
        {
            "url": "https://sleek-collections-api.herokuapp.com/"
        }
    ]

}
